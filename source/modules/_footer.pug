mixin footer()
  footer.looper-footer
    ul.list-inline
      -
        var footerMenu = ['Support', 'Help Center', 'Privacy', 'Terms of Service'];
      each item in footerMenu
        li.list-inline-item
          a.text--muted(href= '#')
            | #{item}
    .copyright
      | Copyright Â© 2018. All right reserved. 