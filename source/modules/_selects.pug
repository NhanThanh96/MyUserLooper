//-------------------------------------------------------
//- Modules :: Selectbox
//-------------------------------------------------------
mixin group-selectbox({id, label, require, disabled, size, isValid, isInvalid, noticeError, iconError,options})
  .form-group.form-customize()&attributes(attributes)
    if label
      label(
        for= id ? `${id}` : null
        class= size ? `select-label--${size}` : null
      )
        | #{label}
        if require
          span.require *
    .select-box
      select.custom-select(
        disabled= disabled ? 'disabled' : null
        class= isValid ? 'select-box--valid' : null
        class= isInvalid ? 'select-box--invalid' : null
        class= size ? `select-box--${size}` : null
      )
        each val in options
          option(
            value= val.value ? `${val.value}` : null
            selected= val.selected ? 'selected' : null
          )
            | #{val.display}
      if noticeError
        .error-notice
          if iconError
            i(class= iconError ? `${iconError}` : null)
          | #{noticeError}
