//-------------------------------------------------------
//- Modules :: Checkbox
//-------------------------------------------------------
mixin group-input-checkbox({name, id, label, disabled, isValid, desc, noticeError, checked})
  .custom-control.custom-checkbox()&attributes(attributes)
    input.custom-control__input(
      type= 'checkbox'
      name= name ? `${name}` : null
      id= id ? `${id}` : null
      checked= checked ? 'checked' : null
      disabled= disabled ? 'disabled' : null
      class= isValid ? 'is-valid' : null
      class= isInValid ? 'is-invalid' : null
    )
    label.custom-control__label(for= id ? `${id}` : null)
      | #{label}
    if desc
      .text-muted
        | #{desc}
    if noticeError
      .invalid-feedback
        i.fa.fa-exclamation-circle.fa-fw
        | #{noticeError}
    
