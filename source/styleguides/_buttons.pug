h2 Button Dropdown
.row
  each val, index in buttonType
    -
      var lists = [
        {
          name: 'dateFilter',
          id: 'dToday',
          mainLabel: 'Today',
          subLabel: 'Mar 27',
          checked: true
        },
        {
          name: 'dateFilter',
          id: 'dYesterday',
          mainLabel: 'Yesterday',
          subLabel: 'Mar 26',
        }
      ];
    .col-3
      .code-example
        .demo
          +button-dropdown({ text: 'Button dropdown', type: val, lists : lists })
        pre
          code
            |-
            |  var lists = [
            |    {
            |      name: 'dateFilter',
            |      id: 'dToday',
            |      mainLabel: 'Today',
            |      subLabel: 'Mar 27',
            |      checked: true
            |    },
            |    {
            |      name: 'dateFilter',
            |      id: 'dYesterday',
            |      mainLabel: 'Yesterday',
            |      subLabel: 'Mar 26',
            |    }
            |  ];
            | +button({
            |   text: 'Button dropdown',
            |   type: '#{val}',
            |   lists: lists
            | })

h2 Button Size
.row
  each val, btnIndex in buttonSize
    each item, typeIndex in buttonType
      .col-3
        .code-example
          .demo
            +buttons({ text: val, type: item, size: val })
          pre
            code
              | +button({
              |   text: '#{val}',
              |   type: '#{item}',
              |   size: '#{val}' 
              | })

