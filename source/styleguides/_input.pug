h2 Input field
.row
  .col-6
    .code-example
      .demo
        form.form-custom
          +group-input-field({ label: '発注日', id: 'example-11', placeholder: '派遣期間' })
      pre
        code
          | form.form-custom
          |  +group-input-field({
          |    label: '発注日',
          |    id: 'example-11',
          |    placeholder: '派遣期間'
          | })
  .col-6
    .code-example
      .demo
        form.form-custom
          +group-input-field-readonly({ label: '発注日', value: 'Kazuki Jin' })( class='form-readonly' )
      pre
        code
          | form.form-custom
          |  +group-input-field-readonly({
          |    label: '発注日',
          |    value: 'Kazuki Jin'
          | })(class='form-readonly')

